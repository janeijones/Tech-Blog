<div class="post card">
    <div class="card-body bg-primary">
        <h5 class="col-sm-2 m-1 text-white">
            Create New Post
        </h5>
    </div>
    <div class="card-body">
        <form id = "new-post-form" class="post-form">
            <div class="mb-3">
                <label for="post-title" class="col-sm-2 col-form-label form-label">Title</label>
            
                <div class="col-sm-10">
                <input type="text" id = "post-title" name = "post-title" class="form-input" />
                </div>

            </div>

            <div class="mb-3">
                <label for="post-body" class="col-sm-2 col-form-label form-label">Content</label>

                <div class="col-sm-10">
                    <textarea type="text" id = "post-body" name = "post-body" class= "form-input"></textarea>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Post</button>
            </div>
        </form>
    </div>
</div>



